{
  "name": "mip-components",
  "version": "1.0.0",
  "description": "Custom MIP Components Repository",
  "main": "index.js",
  "scripts": {
    "dev": "mip2 dev -i",
    "build": "rm -rf dist && mip2 build -i",
    "site": "npm run build && node tools/site",
    "lint": "npm run lint:js && npm run lint:style",
    "fix": "npm run fix:js && npm run fix:style",
    "lint:js": "eslint --ext .vue,.js .",
    "fix:js": "eslint --ext .vue,.js . --fix",
    "lint:style": "stylelint ./**/*.{vue,css,less}",
    "fix:style": "stylelint ./**/*.{vue,css,less} --fix",
    "lint:test": "eslint ./components/mip-inservice-login/mip-inservice-login.vue",
    "deploy:xiaoshuo": "baidu-bos dist/mip-shell-xiaoshuo/mip-shell-xiaoshuo.js bos://assets/mip2-extensions/mip-shell-xiaoshuo/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mip-project/mip-components.git"
  },
  "keywords": [
    "MIP"
  ],
  "author": "MIP",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mip-project/mip-components/issues"
  },
  "homepage": "https://github.com/mip-project/mip-components#readme",
  "dependencies": {
    "fastclick": "^1.0.6",
    "mip-sandbox": "^1.1.9",
    "mustache": "^3.0.1",
    "web-animations-js": "^2.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsdoc": "^4.8.3",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.4",
    "husky": "^2.2.0",
    "mip2": "^1.5.10",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  }
}
